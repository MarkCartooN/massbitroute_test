

resource "google_compute_instance_from_machine_image" "mbr-portal-new-commit-test" {
  name         = "${var.project_prefix}-${var.environment}-portal-test-[[NODE_ID]]"
  machine_type = var.map_machine_types["mbr-core-micro"]
  zone         = "${var.default_zone}"
  provider = google-beta

  tags = ["http-server", "https-server"]
  source_machine_image = "projects/mbr-test-341307/global/machineImages/mbr-test-portal"



  network_interface {
    network = "${var.network_interface}"

    access_config {
      nat_ip = "34.101.57.212"
    }
  }

  metadata_startup_script =  <<EOH
  #!/bin/bash
  echo "test" >> /home/test
  EOH


  service_account {
    # Google recommends custom service.massbitroute.devccounts that have cloud-platform scope.massbitroute.devnd permissions granted via IAM Roles.
    email = "${var.email}"
    scopes = ["cloud-platform"]
  }

}

output "mbr_portal_public_ip" {
  description = "Public IP of new.massbitroute.devPI VM"
  value = google_compute_instance_from_machine_image.mbr-portal-new-commit-test.network_interface.0.access_config.0.nat_ip
}
